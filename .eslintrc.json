{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "requireConfigFile": false,
        "babelOptions": {
            "plugins": [
              "@babel/plugin-proposal-class-properties"
            ]
        }
    },
    "parser": "@babel/eslint-parser",
    "plugins": [
        "react",
        "jest",
        "@babel"
    ],
    "ignorePatterns": ["src/*"],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-react": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }]
      }
}
